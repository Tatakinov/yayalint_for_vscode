{
    //https://marketplace.visualstudio.com/items?itemName=emeraldwalk.RunOnSave
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.peg$",
                "cmd": "tspeg --include-grammar-comment=false ${file} ${fileDirname}\\parser.ts"
            }
        ]
    },
    // The following will hide the js and map files in the editor
    "files.exclude": {
        "lint/src/parser.ts": true //all we need is change the peg file
    }
}